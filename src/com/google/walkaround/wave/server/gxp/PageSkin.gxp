<!DOCTYPE gxp:template SYSTEM
  'http://gxp.googlecode.com/svn/trunk/resources/xhtml.ent'>
<gxp:template name='com.google.walkaround.wave.server.gxp.PageSkin'
  xmlns='http://www.w3.org/1999/xhtml'
  xmlns:expr='http://google.com/2001/gxp/expressions'
  xmlns:call='http://google.com/2001/gxp/call'
  xmlns:gxp='http://google.com/2001/gxp'
  xmlns:nomsg='http://google.com/2001/gxp/nomsg'>

  <gxp:param name='analyticsAccount' type='String'/>
  <gxp:param name='title' type='String'/>
  <gxp:param name='userEmail' type='String'/>
  <gxp:param name='content' type='HtmlClosure'/>

  <html gxp:doctype='transitional'>
    <head>
      <link href='https://fonts.googleapis.com/css?family=Open+Sans'
            rel='stylesheet' type='text/css'/>
      <title><gxp:eval expr='title'/></title>
      <style type='text/css'>
        html, body {
          margin: 0px;
          padding: 0px;
        }

        body {
          font-family: sans-serif;
          color: #333;
          font-size: 16px;
          font-size: 16px;
        }

        a {
          color: #003EA8;
        }

        #logo {
        }

        #header {
          overflow: hidden;
        }

        #title {
          color: #888;
          font-family: 'Open Sans', sans-serif;
          font-size: 1.5em;
        }

        #user-email {
          font-size: 1.1em;
        }
        
        #top-links {
          float: right;
          font-size: 0.8em;
        }
        
        #top-links a {
          margin-left: 10px;
          text-decoration: none;
        }

        #footer {
          font-size: 0.9 em;
        }

        .main {
          padding: 10px 20px;
          background: white;
          position: absolute;
          left: 0;
          right: 0;
          top: 0;
          bottom: 0;
        }

        #bottom-back1 {
          position: absolute;
          top: 450px;
          height: 400px;
          width: 100%;
          background: -webkit-gradient(linear, left top, left bottom, from(white), to(#164FB0));
          background: -moz-linear-gradient(top, white, #164FB0);
        }

        #bottom-back2 {
          position: absolute;
          top: 850px;
          bottom: 0px;
          width: 100%;
          background: #164FB0;
        }
      </style>
      <call:AnalyticsFragment expr:account='analyticsAccount'/>
    </head>
    <body>
      <!--div id='bottom-back1'> </div>
      <div id='bottom-back2'> </div-->
      <div class='main'>
        <div id='header'>
          <span id='title'><gxp:msg>walkaround</gxp:msg></span>
          <span id='top-links'>
            <span id='user-email'>
              <gxp:eval expr='userEmail'/>
            </span>
            <gxp:if cond='userEmail.isEmpty()'>
            <gxp:else/>
              <a href='/logout'><gxp:msg>logout</gxp:msg></a>
            </gxp:if>
          </span>
        </div>
        <gxp:eval expr='content'/>
      </div>
    </body>
  </html>
</gxp:template>
